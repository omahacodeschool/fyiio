
<div>
<h1>Search results!</h1>
  <div> 
    <%= form_tag("/search", method: "get") do %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>
  <% @results.each do |result| %>
    <p><%= link_to(result.title, "/tutorials/#{result.id}") %></p>
    <div class="preview" style="display: block"> <%= result.description %>
      <br>
    <%= result.chapters.count %>
    </div>
  <% end %>
</div>
