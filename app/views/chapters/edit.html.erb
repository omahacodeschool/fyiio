<h1>Edit Chapter</h1>.
<h3> For <%= @tutorial.title %></h3>

<%= form_for  @edit_chapter, :url => "update/confirmation" do |f| %>
  Title: <%= f.text_field :title %><br />
  Description:<br /> <%= f.text_area :description %><br />
  Start Time: <%= f.text_field :start_time %><br />
  End Time: <%= f.text_field :end_time %><br />
  Draft: <%= f.check_box :draft %><br />
  <%= f.submit %>
<% end %>

<% @chapters.each do |chapter| %>
  <%= link_to("Edit Chapter #{chapter.title}", edit_chapter_path(@tutorial.id, chapter.id)) %>
  <br>
<% end %>