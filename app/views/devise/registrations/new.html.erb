<div class="container">
  <% if Company.find_by_id(session[:company_id]) != nil %>
      <div class="page-header">
        <h1>Sign up</h1>
      </div>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

       <div class="field">
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.file_field :profile_image %>
      </div>

      <div class="field">
        <%= f.hidden_field :archived, :value => false %>
      </div>

      <div class="field">
        <%= f.hidden_field :company_id, value: session[:company_id]%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      
    <% end %>


    <%= render "devise/shared/links" %>
  <% else %>
      You must first create a company or accept a company invitation before creating an FYI-IO user account
  <% end %>
</div>